<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/large_gap"
    android:background="@drawable/rounded_corner_list_item">
    <!--android:background="#80cbc4"-->


    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="fill_parent"

        >

        <TextView
            android:id="@+id/studyset_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Name"
            android:maxWidth="150dp"
            />

        <TextView
            android:id="@+id/studyset_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="Supported Language"
            android:textAlignment="textEnd"
            android:maxWidth="100dp"
            android:maxLines="3"
             />
    </RelativeLayout>

    <TextView
        android:id="@+id/studyset_highscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="23500"
         />

</LinearLayout>
