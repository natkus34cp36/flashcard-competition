<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nat.flashcardcompetition.StartUpActivity">

    <EditText
        android:id="@+id/startup_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/option3_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Put your Beautiful name"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="34dp" />

    <Button
        android:id="@+id/startup_login_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:background="@drawable/button"
        android:onClick="login"
        tools:layout_editor_absoluteY="99dp"
        tools:layout_editor_absoluteX="148dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/startup_username"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/option3_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@+id/scoreboard_detail_textview"
        android:background="@drawable/button"
        android:text="@string/option3"
        android:textColor="@color/text_primary"
        android:textSize="@dimen/font_size"
        android:textAllCaps="false"
        android:onClick="showOption3"
        app:layout_marginTopPercent="3%"
        app:layout_marginLeftPercent="67%"
        app:layout_widthPercent="28%"
        app:layout_heightPercent="10%"/>
</RelativeLayout>
